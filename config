ngx_addon_name=ngx_http_kafka_module
if test -n "$ngx_module_link"; then
	ngx_module_type=HTTP
	ngx_module_name=$ngx_addon_name
	ngx_module_srcs="$ngx_addon_dir/ngx_http_kafka_module.c $ngx_addon_dir/test.cpp"
	ngx_module_libs="-lrdkafka -lz -lpthread"
	. auto/module
else
	HTTP_MODULES="$HTTP_MODULES ngx_http_kafka_module"
	NGX_ADDON_SRCS="$NGX_ADDON_SRCS $ngx_addon_dir/ngx_http_kafka_module.c $ngx_addon_dir/test.cpp"

# Save our sources in a separate var since we may need it in config.make
        PS_NGX_SRCS="$NGX_ADDON_SRCS "
	CORE_LIBS="$CORE_LIBS -lrdkafkacpp -lrdkafka -lstdc++ -lz -lpthread"
fi
